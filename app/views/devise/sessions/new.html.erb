<div class="container">
  <div class="login-container">
    <div class="form-login">
      <h2>Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" }, placeholder: "ruby@gmail.com" %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password", placeholder: "******" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions-btn">
          <%= f.button :submit, "Log in", class: "primary-button" %>
        </div>
      <% end %>
      <div class="form-bottom-links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
